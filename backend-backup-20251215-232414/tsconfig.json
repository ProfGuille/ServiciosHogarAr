{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/db": ["db.ts"],
      "@/shared/*": ["shared/*"],
      "@shared/schema": ["shared/schema/index.ts"],
      "@shared/schema/*": ["shared/schema/*"]
    },
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}

