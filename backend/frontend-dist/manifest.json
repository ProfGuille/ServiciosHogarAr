  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://servicioshogar.com.ar/manifest.json"
    }
  ],

  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+servicioshogar",
      "url": "/handle?type=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],

  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  
  "handle_links": "preferred",
  
  "iarc_rating_id": "",
  
  "features": [
    "cross-origin-isolated"
  ]
}