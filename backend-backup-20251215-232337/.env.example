# ==== APP CONFIG ====
PORT=5000
NODE_ENV=production
SESSION_SECRET=change_this_to_a_secure_random_string

# ==== DATABASE ====
DATABASE_URL=postgresql://username:password@host:5432/database_name?sslmode=require

# ==== SMTP (Zoho Email Service) ====
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_zoho_email@yourdomain.com
SMTP_PASS=your_zoho_app_password
EMAIL_FROM="Servicios Hogar <noreply@servicioshogar.com.ar>"

# ==== PUSH NOTIFICATIONS (VAPID) ====
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@servicioshogar.com.ar